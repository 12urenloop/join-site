    <div class='card'>
      <div class='card-content'>
        <% if @motivation.errors.any?  %>
          <div class='message is-danger'>
            <div class='message-body'>
              <% @motivation.errors.full_messages.each do |msg| %>
                <p><%= msg %></p>
              <% end %>
            </div>
          </div>
        <% end %>
        <%= form_for @motivation do |f| %>
        <div class='clean-columns'>
        <div class='columns'>
          <div class='column'>
            <div class='field'>
              <%= f.label :name, 'Naam', class: 'label required' %>
              <p class='control'>
              <%= f.text_field :name, class: 'input', required: true %>
              </p>
            </div>
          </div>
          <div class='column'>
            <div>
              <%= f.label :firstname, 'Voornaam', class: 'label required' %>
              <p class='control'>
              <%= f.text_field :firstname, class: 'input', required: true %>
              </p>
            </div>
          </div>
        </div>
      </div>



          <div class='field'>
            <%= f.label :email, class: 'label required' %>
            <p class='control'>
            <%= f.text_field :email, class: 'input', required: true %>
            </p>
          </div>

          <div class='field'>
            <%= f.label :phone, 'Telefoonnummer', class: 'label required' %>
            <p class='control'>
            <%= f.text_field :phone, class: 'input', required: true %>
            </p>
          </div>
          <div class='field'>
            <%= f.label :school, 'Universiteit / Hoge school', class: 'label required' %>
            <p class='control'>
            <%= f.text_field :school, class: 'input', required: true %>
            </p>
          </div>
          <div class='field'>
            <%= f.label :opleiding, 'Opleiding', class: 'label required' %>
            <p class='control'>
            <%= f.text_field :opleiding, class: 'input', required: true %>
            </p>
          </div>

          <div class='field'>
            <%= f.label :studyyears, 'Resterende aantal studiejaren', class: 'label required' %>
            <p class='control'>
            <%= f.number_field :studyyears, class: 'input', required: true %>
            </p>
          </div>

          <div class='field'>
            <%= f.label :motivation, 'Motivatie', class: 'label' %>
            <p class='control'>
            <%= f.text_area :motivation, class: 'textarea', placeholder: 'Vertel ons wat je wil doen en waarom', required: true %>
            </p>
          </div>

          <div>
            <%= cloudflare_turnstile %>
          </div>

          <p class='submit'>
          <%= f.submit 'Verzenden', class: 'button is-success' %>
          </p>
        <% end %>
      </div>
    </div>
